<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kowalczyk.arek.mobilnymandat.FineActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/fToolbar"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:id="@+id/fText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Wystaw mandat"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </android.support.v7.widget.Toolbar>

    <Button
        android:id="@+id/buFine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="19dp"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:text="Wystaw" />

    <Button
        android:id="@+id/buBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cofnij"
        android:layout_alignBaseline="@+id/buFine"
        android:layout_alignBottom="@+id/buFine"
        android:layout_alignRight="@+id/fPrice"
        android:layout_alignEnd="@+id/fPrice" />

    <EditText
        android:id="@+id/fTextName"
        android:layout_width="368dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Imię i Nazwisko"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="79dp"
        android:layout_below="@+id/fToolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/fPesel"
        android:layout_width="368dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Pesel"
        android:inputType="number"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="79dp"
        android:layout_below="@+id/fTextName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/fFather"
        android:layout_width="368dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Imię ojca"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="79dp"
        android:layout_below="@+id/fPesel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/fDoc"
        android:layout_width="368dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Dokument tożsamości"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="79dp"
        android:layout_below="@+id/fFather"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/fBase"
        android:layout_width="368dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Podstawa prawna udzielenia mandatu"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="79dp"
        android:layout_below="@+id/fDoc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp" />

    <EditText
        android:id="@+id/fCrime"
        android:layout_width="368dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Wykroczenie"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="79dp"
        android:layout_below="@+id/fBase"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/fPrice"
        android:layout_width="368dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Kwota mandatu"
        android:inputType="number"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="79dp"
        android:layout_below="@+id/fCrime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/fAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Adres"
        android:inputType="textPostalAddress"
        android:layout_below="@+id/fDoc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/fDoc"
        android:layout_alignEnd="@+id/fDoc" />

</RelativeLayout>
